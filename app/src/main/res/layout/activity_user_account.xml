<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303030"
    tools:context=".userAccount">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_baseline_account_circle_24"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="13dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_baseline_emoji_emotions_24"
            />
        <TextView
            android:id="@+id/userNameGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="13dp"
            android:textAllCaps="true"
            android:text="Name"
            android:textSize="22sp"
            android:textColor="#fff"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="13dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            />
        <TextView
            android:id="@+id/emailInGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:padding="13dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/resetPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:padding="10dp"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#C8C2C2"
                android:background="@drawable/loginui"
                android:textAlignment="center"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/logoutn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                android:background="@drawable/loginui"
                android:text="Logout"
                android:textAlignment="center"
                android:textColor="#C8C2C2"
                android:textSize="22sp" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>