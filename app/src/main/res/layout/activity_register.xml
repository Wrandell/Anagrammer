<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303030"
    tools:context=".Register">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="#C8C2C2"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signuplabel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            />

        <EditText
            android:id="@+id/ingamename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Name"
            android:textColorHint="#C8C2C2"
            android:textColor="#C8C2C2"
            android:inputType="text"
            android:textAlignment="textStart"
            android:background="#393434"
            android:padding="13dp"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            />

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:textColorHint="#C8C2C2"
            android:background="#393434"
            android:textColor="#C8C2C2"
            android:padding="13dp"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_marginTop="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_weight="1"
            android:textColor="#C8C2C2"
            android:textColorHint="#C8C2C2"
            android:layout_marginStart="10dp"
            android:padding="13dp"
            android:drawableRight="@drawable/ic_baseline_visibility_off_24"
            android:layout_marginEnd="30dp"
            android:background="#393434"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
            />

        <EditText
            android:id="@+id/repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Retype Password"
            android:textColorHint="#C8C2C2"
            android:layout_weight="1"
            android:textColor="#C8C2C2"
            android:inputType="textPassword"
            android:background="#393434"
            android:padding="13dp"
            android:layout_marginStart="10dp"
            android:drawableRight="@drawable/ic_baseline_visibility_off_24"
            android:layout_marginEnd="30dp"
            android:textAlignment="textStart"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/loginui"
            android:text="Register"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="#C8C2C2"
            android:textSize="22sp" />

    </RelativeLayout>

</LinearLayout>